[Unit]
Description=pi_monitor controller service
After=network.target

[Service]
User=pi
WorkingDirectory=/home/pi/r/cbs-ntcore/pi_monitor
ExecStart=python3 -m pi_monitor controller
RestartSec=60
Restart=always
StandardOutput=file:/home/pi/pi_monitor_controller.out
StandardError=file:/home/pi/pi_monitor_controller.err
#WatchdogSec=30

[Install]
WantedBy=multi-user.target
